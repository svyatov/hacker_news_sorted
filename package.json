{
  "name": "hacked_news_sorted",
  "displayName": "Hacker News Sorted",
  "version": "2.2.0",
  "description": "Gives the ability to sort posts on the news.ycombinator.com site by the number of points, time, or comments.",
  "author": "Leonid Svyatov <leonid@svyatov.com>",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "release": "bun run build && bun run package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "fixture:update": "bun app/__fixtures__/updateFixture.ts"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "manifest": {
    "host_permissions": [
      "https://news.ycombinator.com/*"
    ]
  },
  "overrides": {
    "msgpackr": "^1.11.2",
    "lmdb": "^3.4.4",
    "svelte": "^4.2.19",
    "content-security-policy-parser": "^0.6.0"
  }
}
