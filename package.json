{
  "name": "hacked_news_sorted",
  "displayName": "Hacker News Sorted",
  "version": "2.3.0",
  "description": "Sort Hacker News your way — by points, time, or comments — instantly.",
  "author": "Leonid Svyatov <leonid@svyatov.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "release": "bun run build && bun run package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && prettier --check .",
    "fixture:update": "bun app/__fixtures__/updateFixture.ts",
    "screenshots": "bun scripts/generate-screenshots.ts",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint",
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jiti": "^2.6.1",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "manifest": {
    "host_permissions": [
      "https://news.ycombinator.com/*"
    ]
  },
  "overrides": {
    "msgpackr": "^1.11.2",
    "lmdb": "^3.4.4",
    "svelte": "^4.2.19",
    "content-security-policy-parser": "^0.6.0"
  }
}
